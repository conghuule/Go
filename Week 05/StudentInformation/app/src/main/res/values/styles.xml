<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="detailText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">12dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="detailHeaderText" parent="detailText">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="detailBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">10dp</item>
    </style>

</resources>