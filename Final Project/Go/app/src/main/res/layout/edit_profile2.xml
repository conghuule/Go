<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:visibility="visible"
    app:circularflow_radiusInDP="10" tools:context=".Activities.MainActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center" android:orientation="vertical" android:paddingTop="15dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="8dp" android:text="Tristian Nguyen"
            android:textColor="#0F97A9" android:textSize="20dp" android:textStyle="bold" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="3dp" android:text="Viet Nam" android:textColor="#0F97A9"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="20dp" android:gravity="center_vertical"
        android:orientation="horizontal" android:paddingLeft="15dp" android:paddingRight="15dp">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
            android:src="@drawable/ic_add_card" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" android:text="ID Card" android:textColor="@color/black"
            android:textSize="20dp" android:textStyle="bold" />

    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginLeft="75dp" android:layout_marginTop="5dp" android:text="Before"
        android:textColor="@android:color/darker_gray" android:textSize="15dp" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center" android:orientation="vertical" android:paddingTop="5dp">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

            <ImageView android:layout_width="300dp" android:layout_height="150dp"
                android:layout_marginLeft="55dp" android:adjustViewBounds="true"
                android:cropToPadding="false" android:src="@drawable/card" />

            <ImageView android:layout_width="50dp" android:layout_height="50dp"
                android:layout_centerHorizontal="true" android:layout_centerVertical="true"
                android:adjustViewBounds="true" android:cropToPadding="false"
                android:src="@drawable/ic_add_a_photo" />

        </RelativeLayout>

    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginLeft="75dp" android:layout_marginTop="10dp" android:text="After"
        android:textColor="@android:color/darker_gray" android:textSize="15dp" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center" android:orientation="vertical" android:paddingTop="5dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="match_parent">

            <ImageView android:layout_width="300dp" android:layout_height="150dp"
                android:layout_marginLeft="55dp" android:adjustViewBounds="true"
                android:src="@drawable/card" />

            <ImageView android:layout_width="50dp" android:layout_height="50dp"
                android:layout_centerHorizontal="true" android:layout_centerVertical="true"
                android:adjustViewBounds="true" android:cropToPadding="false"
                android:src="@drawable/ic_add_a_photo" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="35dp" android:gravity="center" android:orientation="vertical">

        <TextView android:layout_width="180dp" android:layout_height="50dp"
            android:layout_marginLeft="-5dp" android:background="@drawable/bg_btn"
            android:drawableLeft="@drawable/ic_save" android:gravity="center"
            android:paddingLeft="20dp" android:text="Save" android:textColor="#0F97A9"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>